<?xml version="1.0" encoding="UTF-8"?>
<project name="CustomApp_SWT_STK_common">
	<import file="../../../SharedResources/Java/SharedResources/common.xml" />

	<condition property="swt.jar" value="org.eclipse.swt.win32.win32.x86_3.100.0.v4233d.jar">
		<os family="windows" arch="x86" />
	</condition>
	<condition property="swt.jar" value="org.eclipse.swt.win32.win32.x86_64_3.100.0.v4233d.jar">
		<os family="windows" arch="amd64" />
	</condition>
	<condition property="swt.jar" value="org.eclipse.swt.gtk.linux.x86_3.100.0.v4233d.jar">
		<or>
			<os family="unix" arch="x86" />
			<os family="unix" arch="i386" />
		</or>
	</condition>
	<condition property="swt.jar" value="org.eclipse.swt.gtk.linux.x86_64_3.100.0.v4233d.jar">
		<os family="unix" arch="amd64" />
	</condition>

	<fail message="Unable to determine SWT jar to use for OS name ${os.name} and arch ${os.arch}.">
		<condition>
			<not>
				<isset property="swt.jar" />
			</not>
		</condition>
	</fail>

	<path id="customapp.swt.stk.classpath">
		<fileset dir="${stk.bin.dir}">
			<include name="agi.jar" />
			<include name="agi.core.jar" />
			<include name="agi.core.swt.jar" />
			<include name="agi.ntvapp.jar" />
			<include name="agi.stk.core.jar" />
			<include name="agi.stkengine.jar" />
			<include name="agi.stkgraphics.jar" />
			<include name="agi.stkobjects.jar" />
			<include name="agi.stkobjects.astrogator.jar" />
			<include name="agi.stkutil.jar" />
			<include name="agi.stkvgt.jar" />
			<include name="agi.stkx.jar" />
			<include name="agi.stkx.initialization.jar" />
			<include name="agi.stkx.swt.jar" />
			<include name="agi.swt.jar" />
		</fileset>
		<fileset dir="../../../SharedResources/Java/SharedResources/ThirdParty/eclipse4.2/lib">
			<include name="${swt.jar}" />
		</fileset>
	</path>
</project>